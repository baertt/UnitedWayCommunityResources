@model IEnumerable<CommunityResources.Models.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
  <div class="index-page">
    <h2>Contacts</h2>
    <br><br>
    <h2>
        <a class="btn btn-primary" id="org-index-create-btn" asp-action="Create">Create New Contact</a>
    </h2>
    <table class="table">
        <thead>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Street_Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Zip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Website)
                    </th>
                <th>
                    @Html.DisplayNameFor(model => model.Organization)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Street_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization.Name)
                </td>
                <td>
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </p>
                    <p>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </p>
                    <p>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </p>
                </td>
            </tr>
    }
        </tbody>
        <tfoot>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Street_Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Zip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Website)
                    </th>
                <th>
                    @Html.DisplayNameFor(model => model.Organization)
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
  </div>
</body>