@model CommunityResources.Models.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div><br />
            <input type="hidden" asp-for="OrganizationId" />
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId"></select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street_Address" class="control-label"></label><br />
                <input asp-for="Street_Address" class="form-control" style="border: 2px solid #CFCFCF"/>
                <span asp-validation-for="Street_Address" class="text-danger"></span>
            </div><br />
            <div class="form-group"><br />
                <label asp-for="City" class="control-label"></label><br />
                <input asp-for="City" class="form-control" style="border: 2px solid #CFCFCF"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div><br />
            <div class="form-group"><br />
                <label asp-for="Zip" class="control-label"></label><br />
                <input asp-for="Zip" class="form-control" style="border: 2px solid #CFCFCF"/>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div><br />
            <div class="form-group"><br />
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" style="border: 2px solid #CFCFCF"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label><br />
                <input asp-for="Phone" class="form-control" style="border: 2px solid #CFCFCF"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div><br />
            <div class="form-group"><br />
                <label asp-for="Website" class="control-label"></label><br />
                <input asp-for="Website" class="form-control" style="border: 2px solid #CFCFCF"/>
                <span asp-validation-for="Website" class="text-danger"></span>
            </div><br />
            <div class="form-group"><br />
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Organizations" asp-action="Index">Exit Without Saving</a>
</div>

