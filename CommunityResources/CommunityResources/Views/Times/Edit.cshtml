@model CommunityResources.Models.Time

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Time</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimesId" />

            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId" style="border: 2px solid #CFCFCF"></select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time_Start" class="control-label"></label>
                <input asp-for="Time_Start" class="form-control" style="border: 2px solid #CFCFCF" />
                <span asp-validation-for="Time_Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time_End" class="control-label"></label>
                <input asp-for="Time_End" class="form-control" style="border: 2px solid #CFCFCF" />
                <span asp-validation-for="Time_End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repeat" class="control-label"></label>
                <input asp-for="Repeat" class="form-control" style="border: 2px solid #CFCFCF" />
                <span asp-validation-for="Repeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label><br />
                <input asp-for="Day" class="form-control" style="border: 2px solid #CFCFCF" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group"><br /><br />
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



