@model CommunityResources.Models.Time

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
  <div class="delete-page">

    <h2>Delete Time</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Organization)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Organization.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Time_Start)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Time_Start)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Time_End)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Time_End)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Repeat)
            </dt>
            <dd>
                @if (Model.Repeat.Equals(0))
                {
                <dd>
                    Every Week
                </dd>}
                @if (Model.Repeat.Equals(1))
                {
                    <dd>
                        1st Week
                    </dd>}
                @if (Model.Repeat.Equals(2))
                {
                    <dd>
                        2nd Week
                    </dd>}
                @if (Model.Repeat.Equals(3))
                {
                    <dd>
                        3rd Week
                    </dd>}
                @if (Model.Repeat.Equals(4))
                {
                    <dd>
                        4th Week
                    </dd>}
                <dt>
                    @Html.DisplayNameFor(model => model.Day)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Day)
                    @ViewData["FK"]
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="TimesId" />
                <input type="submit" value="Delete" class="btn btn-default" id="delete-btn"/>
                <br><br>
                <div>
                    <a class="btn btn-primary" id="ews-btn" asp-action="AddTimes" asp-route-id="@Model.OrganizationId">Cancel</a>
                </div>

            </form>
        </div>
  </div>
</body>