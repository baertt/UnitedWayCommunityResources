@model IEnumerable<CommunityResources.Models.Organization>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/site.css" type="text/css" runat="server">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

</head>
<body>
    <header class="container">



        <div class="row">



            <h1 class="col-sm-10" id="title">Community Resources</h1>

            <div id="google_translate_element"></div>
            <script type="text/javascript">

                        function googleTranslateElementInit() {

                          new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE, autoDisplay: false}, 'google_translate_element');

                        }

            </script>
            <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>





        </div>



    </header>
    <h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">


        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Other_Requirements)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Other_Requirements_Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Appointments_Availible)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Appointments_Required)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Additional_Comments)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Photo_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Other_Requirements)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Other_Requirements_Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Appointments_Availible)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Appointments_Required)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Additional_Comments)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>